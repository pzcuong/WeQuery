script. 
    async function TaoBaiTap() {
        var form = document.querySelector("#formElem");

        data = {
            MaNhom: form.querySelector('input[name="MaNhom"]').value,
            TenNhom: form.querySelector('input[name="TenNhom"]').value,
        }

        let url = window.location.href;

        let response = await fetch(url, {
                method: 'POST', 
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
                json: true
        })

        //selector button class btn btn-success from document
        //document.querySelector('')
        let text = await response.json(); 

        //- document.querySelector("#encoded").innerHTML = text.message;
        alert(text.message);
        // reload lại trang
        if (text.statusCode == 200)
          location.reload();
    }